f = open ('17_3.txt') #считываем файл

s = list(map(int, f.readlines())) #заносим числа из файла в список

k = 0 #кол-во кроссовок под стиль Саши

maxsum = -10 ** 10 #макс. сумма уникальных кодов таких кроссовок

for i in range (len(s) - 1): #цикл для 1 кроссовки

    for j in range (i+1, len(s)): #цикл для 2 кроссовки
        
        if (abs(s[i] - s[j]) <= 1000) and (s[i] % 2 != 0 or s[j] % 2 != 0) and ('4' in str(s[i]) and '4' in str(s[j])): #соответствие кроссовок стилю

            k += 1 #увеличение числа пар кроссовок, подходящих под стиль Саши

            maxsum = max(maxsum, s[i] + s[j]) #запоминаем макс. сумму их уникальных кодов

print(k,maxsum)
